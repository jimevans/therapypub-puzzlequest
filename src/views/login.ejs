<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Sign in to PuzzleQuest</title>
    <link rel="stylesheet" type="text/css" href="/style/pq.css" />
    <link rel="icon" type="image/png" href="/image/pq-logo-64.png" sizes="64x64 32x32 24x24 16x16" />
    <link rel="icon" type="image/png" href="/image/pq-logo-192.png" sizes="192x192" />
  </head>
  <body>
    <form>
      <div class="pq-form-element">
        <div class="pq-label">
          <label for="user-name">User Name:</label>
        </div>
        <div class="pq-input">
          <input id="user-name" />
        </div>
      </div>
      <div class="pq-form-element">
        <div class="pq-label">
          <label for="password">Password:</label>
        </div>
        <div class="pq-input">
          <input id="password" type="password" />
        </div>
      </div>
      <div class="pq-form-element">
        <div>
          <button id="login" class="pq-button" type="submit">Sign in</button>&nbsp;
          <button id="cancel" class="pq-button">Cancel</button>
        </div>
        </div>
      <div class="pq-error pq-hide">
        <span>Invalid user name or password</span>
      </div>
    </form>
    <script type="text/javascript" src="/script/login.js"></script>
  </body>
</html>

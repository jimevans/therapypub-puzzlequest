<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Puzzle Details</title>
    <link rel="stylesheet" type="text/css" href="/style/pq.css" />
    <link rel="icon" type="image/png" href="/image/pq-logo-64.png" sizes="64x64 32x32 24x24 16x16" />
    <link rel="icon" type="image/png" href="/image/pq-logo-192.png" sizes="192x192" />
  </head>
  <body>
    <div class="pq-form-element">
      <div class="pq-label">
        Puzzle name:
      </div>
      <div class="pq-input">
        <%= puzzle.name %>
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        Display name:
      </div>
      <div class="pq-input">
        <%= puzzle.displayName %>
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        Display type:
      </div>
      <div class="pq-input">
        <% if (puzzle.type === 0) { %>
        Text
        <% } else if (puzzle.type === 1) { %>
        Image
        <% } else if (puzzle.type === 2) { %>
        Audio
        <% } else if (puzzle.type === 3) { %>
        Video
        <% } %>
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        <label>Puzzle content:</label>
      </div>
      <div id="puzzle-content">
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        Solution keyword:
      </div>
      <div class="pq-input">
        <%= puzzle.solutionKeyword %>
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        Solution display text:
      </div>
      <div class="pq-input">
        <%= puzzle.solutionDisplayText %>
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        Activation code:
      </div>
      <div class="pq-input">
        <%= puzzle.activationCode %>
      </div>
    </div>
    <% if (!puzzle.hints.length) { %>
    <div>
      No hints to display
    </div>
    <% } else { %>
    <div id="hints">
    </div>
    <% } %>
    <div class="pq-form-element">
      <button id="edit" class="pq-button">Edit</button>
      <button id="close" class="pq-button">Close</button>
    </div>
    <div class="pq-error pq-hide">
      <span id="error-message"></span>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script type="text/javascript">
      const renderMode = "<%=renderMode%>";
      const puzzle = <%- JSON.stringify( puzzle ? { "name": puzzle.name, "type": puzzle.type, "content": puzzle.text, "hints": puzzle.hints } : null) %>;
    </script>
    <script type="module" src="/script/puzzleDetails.js"></script>
  </body>
</html>

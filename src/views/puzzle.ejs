<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>User Details</title>
    <link rel="stylesheet" type="text/css" href="/style/pq.css" />
  </head>
  <body>
    <div class="pq-form-element">
      <div class="pq-label">
        <label for="puzzle-name">Puzzle name:</label>
      </div>
      <div class="pq-input">
        <input id="puzzle-name" value="<%= renderMode !== "create" ? puzzle.name : "" %>" <%= renderMode !== "create" ? "readonly" : "" %> />
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        <label for="display-name">Display name:</label>
      </div>
      <div class="pq-input">
        <input id="display-name" value="<%= renderMode !== "create" ? puzzle.displayName : "" %>" <%= renderMode === "display" ? "readonly" : "" %> />
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        <label for="puzzle-type">Puzzle type:</label>
      </div>
      <% if (renderMode === "display") { %>
      <div class="pq-input">
        <input id="puzzle-type" value="<%= puzzle.type %>" readonly />
      </div>
      <% } else { %>
      <div class="pq-select">
        <select id="puzzle-type">
          <option value="0" <%=puzzle === null || puzzle.type === 0 ? "selected" : ""%>>Text</option>
          <option value="1" <%=puzzle && puzzle.type === 1 ? "selected" : ""%>>Image</option>
          <option value="2" <%=puzzle && puzzle.type === 2 ? "selected" : ""%>>Audio</option>
          <option value="3" <%=puzzle && puzzle.type === 3 ? "selected" : ""%>>Video</option>
        </select>
      </div>
      <% } %>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        <label>Puzzle content:</label>
      </div>
      <div id="puzzle-content">
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        <label for="solution-keyword">Solution keyword:</label>
      </div>
      <div class="pq-input">
        <input id="solution-keyword" value="<%= renderMode !== "create" ? puzzle.solutionKeyword : "" %>" <%= renderMode === "display" ? "readonly" : "" %> />
      </div>
    </div>
    <div class="pq-form-element">
      <div class="pq-label">
        <label for="solution-display-text">Solution display text:</label>
      </div>
      <div class="pq-input">
        <input id="solution-display-text" value="<%= renderMode !== "create" ? puzzle.solutionDisplayText : "" %>" <%= renderMode === "display" ? "readonly" : "" %> />
      </div>
    </div>
    <% if (renderMode === "display") { %>
    <div class="pq-form-element">
      <button id="edit" class="pq-button">Edit</button>
    </div>
    <% } else { %>
    <div class="pq-form-element">
      <button id="save" class="pq-button">Save</button>&nbsp;
      <button id="cancel" class="pq-button">Cancel</button>
    </div>
    <% } %>
    <div class="pq-error pq-hide">
      <span id="error-message"></span>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script type="text/javascript">
      const renderMode = "<%=renderMode%>";
      const puzzle = <%- JSON.stringify( puzzle ? { "name": puzzle.name, "type": puzzle.type, "content": puzzle.text } : null) %>;
    </script>
    <script type="module" src="/script/puzzle.js"></script>
  </body>
</html>
